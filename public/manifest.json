{
  "manifest_version": 2,
  "name": "My Firefox Extension",
  "version": "1.0",
  "description": "A Firefox extension built with React",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab"
  ]
}
